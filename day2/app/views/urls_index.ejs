<!DOCTYPE html>
<html lang="en">
<% include ../views/partials/_head %>
<body>

  <div class="container">
  <header>
        <% include partials/_header %>
  </header>
      <form action="/u" method="POST" style="margin:10px;">
        <label for="longURL">Enter a URL:</label>
        <input id="longURL" type="text" name="longURL" placeholder="http://" style="width: 300px">
        <input type="submit" value="Submit">
      </form>
      <ul>
        <% for(let key in urls){ %>
          <li><%= key %> -> <a href="/u/<%= key %>"><%= urls[key] %></a>
            <form action="/urls/<%= key %>/" method="POST">
              <button>Edit</button>
            </form>
          </li>
        <% }; %>
      </ul>
    </div>
</body>
</html>
